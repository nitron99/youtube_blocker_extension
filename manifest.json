{
  "name": "Youtube Blocker",
  "version": "1.1",
  "description": "Blocks youtube access to help you to focus on your work.",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["contentScript.js"]
    }
  ],
  "permissions": [
    "scripting", 
    "activeTab",  
    "storage",
    "tabs" ],
  "action": {
    "default_title": "Initialising...",
    "default_icon": {
      "16": "icons/grey.png"
    }
  },
  "icons": {
    "16": "/icons/logo.png",
    "32": "/icons/logo.png",
    "48": "/icons/logo.png",
    "128": "/icons/logo.png"
  }
}